<%- include("../partials/header") %>

<div class="container">
    <div class="jumbotron">
        <div class="row" style="height: fit-content">
            <div class="col-lg-3">
                <div class="card" style="height:170px; ">
                    <div class="thumbnail" style="padding: 3px;,height: 100%;"> 
                        <img src="https://images.unsplash.com/photo-1511367461989-f85a21fda167?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80" style="height: 100%;">
                    </div>    
                </div>        
            </div>
        </div>
        <h1><%= currentUser.username %></h1>
        <a class="btn btn-primary btn-xs" href="/profile/<%= currentUser._id %>/edit"> Edit Profile </a>
        <h4>city: <%= currentUser.city%></h4>
        <h2>campgrounds created</h2><br>
        <% if( campgrounds.length==0 ) { %>
            <h4>
                no campgrounds posted yet. 
            </h4> 
            <a class="btn btn-info btn-xs" href="/campgrounds/new/">Add new campground </a>

            <% } else { %>
            <%    campgrounds.forEach((camps)=>{if(camps!=null){  %>
            <h3> <%= camps.name %> </h3>
            
            <% } } ) } %>    

        <br>
        <br>
            <h2>Comments created</h2><br>
            <% if( comment.length==0 ) { %>
                <h4>
                    no comments .sry
                </h4> 
                <% } else { %>
                <%    comment.forEach((comments)=>{  %>
                <h3> <%= comments.text %> </h3>
                
                <% } ) } %>    
    </div>
</div>


<%- include("../partials/footer") %>