<%- include("../partials/header") %>
<div>
    
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp</h1>
                <p>View our handpicked Campgrounds</p>
                <a href="/campgrounds/new" class="btn btn-primary btn-large" >Add new campground</a>
            </div>    
        </header>
        <div class="row text-center" style="display:flex; flex-wrap: wrap;" >
                <% campgrounds.forEach((camps)=>{ %>
                    <div class="col-md-3">
                        <div class="card">
                                <div class="thumbnail">
                                    <img src="<%= camps.image %>" >         
                                    <div class="caption"> 
                                        <h4><%= camps.name%></h4>
                                    </div>  
                                    <p>
                                        <a href="/campgrounds/<%= camps._id%>" class="btn btn-primary">More Info</a>
                                    </p>        
                                </div>
                                
                        </div>  
                    </div>
                <% }) %>  
        </div>
    </div>    
</div>

<%- include("../partials/footer") %>
